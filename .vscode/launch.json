  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${file}"
    },
    // https://medium.com/@jsilvax/debugging-webpack-with-vs-code-b14694db4f8e
    {
      "type": "node",
      "request": "launch",
      "name": "debug demo2",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "args": [
        // 默认为 `./webpack.config.js`
        "--config", "./packages/vscode-debug/demo2/webpack.config.js"
      ],
      "env" : { "NODE_ENV" : "production" },
      // "envFile": "${workspaceFolder}/xxx.env",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug demo3",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      // "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "args": [
        // 默认为 `./webpack.config.js`
        // "--host", "0.0.0.0",
        "--config", "./packages/vscode-debug/demo3/webpack.config.js"
      ],
      "env" : { "NODE_ENV" : "production" },
      // "envFile": "${workspaceFolder}/xxx.env",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "debug demo4",
      "program": "${workspaceFolder}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
      "args": [
        // 默认为 `./webpack.config.js`
        "--host", "0.0.0.0",
        "--config", "./packages/vscode-debug/demo4/webpack.config.js"
      ],
      "env" : { "NODE_ENV" : "production" },
      // "envFile": "${workspaceFolder}/xxx.env",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "webpack:plugin debug",
      "program": "${workspaceFolder}/node_modules/.bin/webpack",
      "args": [
        // 默认为 `./webpack.config.js`
        "--watch",
        "--progress",
        "--colors",
        "--mode", "development",
        "--config", "./packages/webpack-plugin/build/webpack.config.js"
      ],
      "env" : { "NODE_ENV" : "production" },
      // "envFile": "${workspaceFolder}/xxx.env",
    },

  ]
}
